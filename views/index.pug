extends layout.pug

block content
  h2 Posters
  form(action="/", method="post")
        label Search for poster names: 
          input(class="input", name="search", placeholder="search posters")
        button(type="submit") search
  ul#myUL
    each key in data
      li
        a(href=key.title)
          h3= key.title
          date= key.date
